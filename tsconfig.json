{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "outDir": "./lib",
    "rootDir": "./src",
    "typeRoots": ["./types"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}